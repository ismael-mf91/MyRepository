<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="?android:listSeparatorTextViewStyle">

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardBackgroundColor="#C2272A" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Description"
            android:layout_gravity="right"
            android:textColor="#ffe3e3e3"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/list_item_requester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:text="Requester"
            android:layout_gravity="right"
            android:textColor="#ffe3e3e3"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/llContainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:background="#ABB4CC"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/id_approve_wi_button"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/approval_approve_label"
                android:textColor="@color/accent_material_light"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/id_reject_wi_button"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/approval_reject_label"
                android:textColor="@color/accent_material_light"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

</RelativeLayout>
